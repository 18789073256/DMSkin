<DMSkin:DMSkinWindow
    x:Class="DMSkinDemo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:DMSkin="clr-namespace:DMSkin;assembly=DMSkin"
    xmlns:controls="clr-namespace:DMSkin.Controls;assembly=DMSkin"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="clr-namespace:DMSkinDemo.View"
    xmlns:viewmodel="clr-namespace:DMSkinDemo.ViewModel"
    Title="Powered by DMSkin"
    Width="950"
    Height="600"
    MinWidth="380"
    MinHeight="300"
    CaptionBackground="{StaticResource ThemeColor}"
    CaptionHeight="50"
    ResizeMode="CanResizeWithGrip"
    Style="{StaticResource DMSkinWindowStyle}"
    SystemButtonBackground="#10FFFFFF"
    SystemButtonBackgroundHover="#88FFFFFF"
    SystemButtonForeground="White"
    SystemButtonSize="50"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.DataContext>
        <viewmodel:MainViewModel />
    </Window.DataContext>
    <!--  左侧标题区域  -->
    <DMSkin:DMSkinWindow.TitleContent>
        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
            <TextBlock
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                FontSize="20"
                Foreground="White"
                Text="Powered by D" />
            <Path
                Width="15"
                Height="15"
                Data="{StaticResource DMSkin}"
                Fill="White"
                Stretch="Fill" />
            <TextBlock
                VerticalAlignment="Center"
                FontSize="20"
                Foreground="White"
                Text="Skin" />
        </StackPanel>
    </DMSkin:DMSkinWindow.TitleContent>
    <!--  系统按钮区域  -->
    <DMSkin:DMSkinWindow.SystemContent>
        <controls:SystemButton
            Width="50"
            Height="50"
            controls:Icon.Geometry="{StaticResource DMSkin}"
            controls:Icon.Height="20"
            controls:Icon.Width="20"
            Background="{StaticResource TransparentColor}"
            Foreground="White"
            Style="{StaticResource DMSkinSystemButton}" />
    </DMSkin:DMSkinWindow.SystemContent>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Background="#F5F5F7">
                <Expander
                    Header="DMSkin"
                    IsExpanded="True"
                    Style="{StaticResource NoExpander}">
                    <StackPanel>
                        <RadioButton
                            controls:Icon.Geometry="{StaticResource DMSkin}"
                            controls:Icon.Height="15"
                            controls:Icon.Width="15"
                            Content="颜色 Colors"
                            GroupName="Menu"
                            IsChecked="True"
                            Style="{StaticResource MenuRadioButtom}" />
                    </StackPanel>
                </Expander>
                <Expander
                    Header="AntDesign"
                    IsExpanded="{Binding IsPluginExpanded}"
                    Style="{StaticResource Expander}">
                    <StackPanel>
                        <RadioButton
                            controls:Icon.Geometry="{StaticResource DMSkin}"
                            controls:Icon.Height="15"
                            controls:Icon.Width="15"
                            Content="插件A"
                            GroupName="Menu"
                            IsChecked="{Binding SelectMenu, Mode=TwoWay, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Word}"
                            Style="{StaticResource MenuRadioButtom}" />
                        <RadioButton
                            controls:Icon.Geometry="{StaticResource DMSkin}"
                            controls:Icon.Height="15"
                            controls:Icon.Width="15"
                            Content="插件B"
                            GroupName="Menu"
                            IsChecked="{Binding SelectMenu, Mode=TwoWay, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Word}"
                            Style="{StaticResource MenuRadioButtom}" />
                        <RadioButton
                            controls:Icon.Geometry="{StaticResource DMSkin}"
                            controls:Icon.Height="15"
                            controls:Icon.Width="15"
                            Content="插件B"
                            GroupName="Menu"
                            IsChecked="{Binding SelectMenu, Mode=TwoWay, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Word}"
                            Style="{StaticResource MenuRadioButtom}" />
                        <RadioButton
                            controls:Icon.Geometry="{StaticResource DMSkin}"
                            controls:Icon.Height="15"
                            controls:Icon.Width="15"
                            Content="插件D"
                            GroupName="Menu"
                            IsChecked="{Binding SelectMenu, Mode=TwoWay, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Word}"
                            Style="{StaticResource MenuRadioButtom}" />
                        <RadioButton
                            controls:Icon.Geometry="{StaticResource DMSkin}"
                            controls:Icon.Height="15"
                            controls:Icon.Width="15"
                            Content="插件A"
                            GroupName="Menu"
                            IsChecked="{Binding SelectMenu, Mode=TwoWay, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Word}"
                            Style="{StaticResource MenuRadioButtom}" />
                        <RadioButton
                            controls:Icon.Geometry="{StaticResource DMSkin}"
                            controls:Icon.Height="15"
                            controls:Icon.Width="15"
                            Content="插件B"
                            GroupName="Menu"
                            IsChecked="{Binding SelectMenu, Mode=TwoWay, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Word}"
                            Style="{StaticResource MenuRadioButtom}" />
                        <RadioButton
                            controls:Icon.Geometry="{StaticResource DMSkin}"
                            controls:Icon.Height="15"
                            controls:Icon.Width="15"
                            Content="插件B"
                            GroupName="Menu"
                            IsChecked="{Binding SelectMenu, Mode=TwoWay, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Word}"
                            Style="{StaticResource MenuRadioButtom}" />
                        <RadioButton
                            controls:Icon.Geometry="{StaticResource DMSkin}"
                            controls:Icon.Height="15"
                            controls:Icon.Width="15"
                            Content="插件D"
                            GroupName="Menu"
                            IsChecked="{Binding SelectMenu, Mode=TwoWay, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Word}"
                            Style="{StaticResource MenuRadioButtom}" />
                    </StackPanel>
                </Expander>
                <Expander Header="我的应用" Style="{StaticResource Expander}">
                    <StackPanel>
                        <RadioButton
                            controls:Icon.Geometry="{StaticResource DMSkin}"
                            controls:Icon.Height="15"
                            controls:Icon.Width="15"
                            Content="个人中心"
                            GroupName="Menu"
                            IsChecked="{Binding SelectMenu, Mode=TwoWay, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Word}"
                            Style="{StaticResource MenuRadioButtom}" />
                        <RadioButton
                            controls:Icon.Geometry="{StaticResource DMSkin}"
                            controls:Icon.Height="15"
                            controls:Icon.Width="15"
                            Content="下载管理"
                            GroupName="Menu"
                            IsChecked="{Binding SelectMenu, Mode=TwoWay, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Word}"
                            Style="{StaticResource MenuRadioButtom}" />
                    </StackPanel>
                </Expander>
            </StackPanel>
        </ScrollViewer>
        <Frame Grid.Column="1">
            <Frame.Content>
                <view:PageAntDesign />
            </Frame.Content>
        </Frame>
    </Grid>
</DMSkin:DMSkinWindow>
